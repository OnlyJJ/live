	  <![CDATA[
	  INSERT INTO t_user_attention(
			id,
			userId,
			toUserId,
			addTime
			) VALUES (
			#{id,jdbcType=VARCHAR},
			#{userId,jdbcType=VARCHAR},
			#{toUserId,jdbcType=VARCHAR},
			#{addTime,jdbcType=VARCHAR}
		)	
		]]>
	  </insert>
	  
	  <insert id="insertBatch" parameterType="java.util.List">
