			 (#{item.id,jdbcType=VARCHAR},#{item.userId,jdbcType=VARCHAR},#{item.toUserId,jdbcType=VARCHAR},#{item.addTime,jdbcType=VARCHAR})
		]]>
		</foreach>
	  </insert>
	  
